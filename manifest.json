{
  "manifest_version": 3,
  "name": "GitHub to DeepWiki",
  "version": "1.0.0",
  "description": "GitHubリポジトリページからDeepWikiドキュメントを開く",
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": ["tabs"],
  "action": {
    "default_title": "Open in DeepWiki",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
